
<% if @campaign.errors.any? %>
<div class="alert alert-danger"> 
	<h5><%= t('common.errors') %></h5>
	<ul>
		<% @campaign.errors.full_messages.each do |error| %>
		<li><%= error %></li>
		<%end%>
	</ul>
</div>
<%end%>

<%= form_for @campaign, html: {multipart: true}, local: true do |f| %>
	<div class="form-group">
		<%= f.label :title %>
		<%= f.text_field :title,class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :summary %>
		<%= f.text_area :summary,class: 'form-control' %>
	</div>


	<div class="form-group">
		  <%= f.label :body %>
		  <%= f.text_area :body ,class: 'form-control' %>
	</div>


	<div class="form-group">
		  <%= f.label :target_amount %>
		  <%= f.number_field :target_amount ,class: 'form-control' %>
	</div>


	<div class="field">
		<%= f.label :image %>
		<%= f.file_field :image %>
	</div>

	<div class="form-group">
		<%= f.label :category_id %>
		<%= f.collection_select :category_id, Category.order(:name), :id, :name, { include_blank: true}, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :all_tags %>
		<%= f.text_field :all_tags, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.submit t('.submit', action: @campaign.new_record? ? t('common.create') : t('common.edit')),class:'btn btn-primary' %>
	</div>
<% end %>